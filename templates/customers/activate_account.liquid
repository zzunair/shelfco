<section class="login section my-5">
  <div class="container">
    <div class="">
      <div class="col-md-12 px-0">
        <h2 class="heading-text">{{ 'customer.activate_account.title' | t }}</h2>
      </div>
      {% form 'activate_customer_password', class: '' %}
        {{ form.errors | default_errors }}
        <div class="form-group">
          <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
          <input type="password"
                 name="customer[password]"
                 class="form-control" id="CustomerPassword"
                 aria-describedby="{{ 'customer.activate_account.password' | t }}"
                 placeholder="{{ 'customer.activate_account.password' | t }}">
        </div>
        <div class="form-group">
          <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
          <input type="password"
                 name="customer[password_confirmation]"
                 class="form-control"
                 id="CustomerPasswordConfirmation"
                 aria-describedby="{{ 'customer.activate_account.password_confirm' | t }}"
                 placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
        </div>
        <input type="submit" class="btn btn-contact" value="{{ 'customer.activate_account.submit' | t }}">
        <input type="submit" class="btn btn-contact" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
      {% endform %}
    </div>
  </div>
</section>
