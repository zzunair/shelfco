<section class="register section my-5">
  <div class="container">
    <div class="row">
      <!-- register account -->
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mx-auto mb-0">
        <h2 class="heading-text">{{ 'customer.register.title' | t }}</h2>
          {% form 'create_customer' %}
          {% if form.errors %}
          {{ form.errors | default_errors }}
          {% endif %}
          <div class="form-group row">
            <div class="col-sm-12">
              <label class="d-print-block sr-only" for="FirstName">{{ 'customer.register.first_name' | t }}</label>
              <input type="text"
                name="customer[first_name]"
                id="FirstName"
                class="form-control"
                placeholder="{{ 'customer.register.first_name' | t }}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off"
                autofocus
                {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <label class="d-print-block sr-only" for="LastName">{{ 'customer.register.last_name' | t }}</label>
              <input type="text"
                  name="customer[last_name]"
                  id="LastName"
                  class="form-control"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off"
                  placeholder="{{ 'customer.register.last_name' | t }}"
                  {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <label class="d-print-block sr-only" for="Email">{{ 'customer.register.email' | t }}</label>
              <input type="email"
                name="customer[email]"
                id="Email"
                class="{% if form.errors contains 'email' %}input-error{% endif %}form-control w-100"
                placeholder="{{ 'customer.register.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% endif %}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <label class="d-print-block sr-only" for="CreatePassword">{{ 'customer.register.password' | t }}</label>
              <input type="password"
                name="customer[password]"
                id="CreatePassword"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off"
                class="{% if form.errors contains 'password' %}input-error{% endif %} form-control"
                placeholder="{{ 'customer.register.password' | t }}">
            </div>
          </div>
          <!-- buttons -->
          <div class="col-xs-12 col-sm-12 col-md-12 p-0 my-3 d-flex">
            <div class="login-button-container clearfix">
              <div class="col-xs-6 register d-inline-flex">
                <input type="submit" class="btn btn-contact" value="{{ 'customer.register.submit' | t }}" aria-label="{{ 'customer.register.submit' | t }}">
              </div>
              <div class="col-xs-6 cancel ml-3 d-inline-flex">
                <a href="{{ routes.root_url }}" class="btn btn-contact" aria-label="{{ 'customer.register.cancel' | t }}">{{ 'customer.register.cancel' | t }}</a>
              </div>
            </div>
          </div>
          <!-- end buttons -->
          <a href="{{ routes.account_url }}" aria-label="{{ 'customer.login.title' | t }}">
            <u>{{ 'customer.login.title' | t }}</u>
          </a>
        {% endform %}
      </div>
      <!-- end register account -->
    </div>
  </div>
</section>

<script defer src="{{ 'customer.js' | asset_url }}"></script>
