  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Free shipping bar"
      },
      {
        "type": "checkbox",
        "label": "Show free shipping bar",
        "id": "is_free_shipping_bar",
        "info": "The free shipping bar currently only works with the default currency of your store. If your store sells in multiple currencies, consider disabling this feature. The free shipping bar is setup separately from your actual shipping rates, which need to be [configured separately](/admin/settings/shipping)",
        "default": false
      },
      {
        "type": "text",
        "id": "promote_free_shipping_text",
        "label": "Announcement text",
        "info": "Do not remove or change [value] as this changes dynamically"
      },
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Cart threshold for free shipping",
        "info": "This is the cart total required for the announcement text for free shipping to apply. Separate dollars and cents with a decimal.",
        "default": 50
      },
      {
        "type": "text",
        "id": "unlock_free_shipping_text",
        "label": "Announcement text for free shipping"
      },
      {
        "type": "header",
        "content": "Cart settings"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Show cart notes",
        "default": true
      },
      {
        "type": "header",
        "content": "Free gift to giveaway"
      },
      {
        "type": "number",
        "id": "free_gift_threshold",
        "label": "Cart threshold for free gift",
        "info": "Set the cart total for the free gift to automatically be added to the cart. Separate dollars and cents with a decimal.",
        "default": 100
      },
      {
        "type": "product",
        "id": "cart_gwp_product_1",
        "label": "Free gift",
        "info": "This should be the free gift you want to automatically add to cart"
      },
      {
        "type": "product",
        "id": "cart_gwp_product_2",
        "label": "When this item is in my cart",
        "info": "The free gift will only be added to cart if this product is in the cart, leave blank otherwise."
      },
      {
        "type": "header",
        "content": "Cart recomendations"
      },
      {
        "type": "text",
        "id": "recommendation_title",
        "label": "Heading",
        "default": "Recommended products"
      },
      {
        "type": "collection",
        "id": "recommended_collection",
        "label": "Recommended collection",
        "info": "The first 3 products of this collection will be shown in the cart drawer."
      },
      {
        "type": "header",
        "content": "Trust badges"
      },
      {
        "type": "checkbox",
        "id": "show_trust_badges",
        "label": "Show trust badges",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "trust_badge_1",
        "label": "Trust badge 1"
      },
      {
        "type": "text",
        "id": "trust_badge_1_text",
        "label": "Trust badge 1 text"
      },
      {
        "type": "image_picker",
        "id": "trust_badge_2",
        "label": "Trust badge 2"
      },
      {
        "type": "text",
        "id": "trust_badge_2_text",
        "label": "Trust badge 2 text"
      },
      {
        "type": "image_picker",
        "id": "trust_badge_3",
        "label": "Trust badge 3"
      },
      {
        "type": "text",
        "id": "trust_badge_3_text",
        "label": "Trust badge 3 text"
      }
    ]
  },
  {
    "name": "Languages",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_languages",
        "label": "Show language selector",
        "default": true,
        "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
      }
    ]
  },
  {
    "name": "Currency",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_multiple_currencies",
        "label": "Show currency selector",
        "default": true,
        "info": "To add a currency, go to your [payment settings.](/admin/settings/payments)"
      }
    ]
  },
  {
    "name": "Product Swatches",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_swatches",
        "label": "Enable color swatches",
        "default": false,
        "info": "For more information on how to correctly setup product color swatches, visit our [theme support documentation.](https://erickson.gitbook.io/theme-settings/color-swatches)"
      },
      {
        "type": "textarea",
        "id": "swatches_colors",
        "label": "Enter colors",
        "default": "white:#ffffff",
        "info": "Enter color variant title with color code in new line each."
      },
      {
        "type": "checkbox",
        "id": "show_quick_buy",
        "default": true,
        "label": "Show quick buy button"
      }
    ]
  }
]
