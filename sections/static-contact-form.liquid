{% comment %}
  Contact form
{% endcomment %}

<section id="{{ section.id }}" class="contact section-{{ section.id }}-padding">
  <div class="container">
    <div class="row">
      <div class="contact-form col-md-6">
        <h3>Send us a message!</h3>
        {% form 'contact', id: 'contact-form' %}
          {% if form.posted_successfully? %}
            <div class="alert alert-info form-success" role="alert">
              {{ 'contact.form.post_success' | t }}
            </div>
          {% endif %}
          {{ form.errors | default_errors }}
          <div class="form-group">
            <label class="d-none d-print-block sr-only" for="ContactFormName">{{ 'contact.form.name' | t }}</label>
            <input
              type="text"
              name="contact[name]"
              id="ContactFormName"
              class="form-control"
              placeholder="{{ 'contact.form.name' | t }}"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off"
            >
          </div>
          <div class="form-group">
            <label class="d-none d-print-block sr-only" for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
            <input
              type="email"
              name="contact[email]"
              class="form-control"
              id="ContactFormEmail"
              placeholder="{{ 'contact.form.email' | t }}"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off"
            >
          </div>
          <div class="form-group">
            <label class="d-none d-print-block sr-only" for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
            <input
              type="tel"
              name="contact[phone]"
              class="form-control"
              id="ContactFormPhone"
              placeholder="{{ 'contact.form.phone' | t }}"
              value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
              pattern="[0-9\-]*"
            >
          </div>
          <div class="form-group">
            <textarea
              name="contact[body]"
              id="ContactFormMessage"
              class="form-control border text-area"
              rows="10"
              {% if form.errors contains 'body' %}
                aria-invalid="true" aria-describedby="CommentForm-body-error"
              {% endif %}
              placeholder="{{ 'contact.form.message' | t }}"
              aria-required="true"
            >{{ form.body }}</textarea>
          </div>
          <div>
            <button
              type="submit"
              id="contact-submit"
              class="btn btn-main w-100 border"
              value="{{ 'contact.form.send' | t }}"
              aria-label="{{ 'contact.form.send' | t }}"
            >
              {{ 'contact.form.send' | t }}
            </button>
          </div>
        {% endform %}
      </div>
      <div class="col-md-6">
        <h3>Contact Info</h3>
        <div
  id="{{ section.id }}"
  class="{{ _colClassLayout }} wow fadeIn section-{{ section.id }}-padding"
  data-wow-delay="300ms"
  tabindex="0"
>
  <div class="cta-wrapper">
    {% for block in section.blocks %}
      {% assign icon_image = block.settings.image | default: block.settings.image %}
      <div class="cta-item">
        {% unless icon_image == blank %}
          {{
            icon_image
            | image_url: width: 800
            | image_tag:
              class: 'img-fluid',
              widths: '50, 100, 150, 200, 250',
              height: sicon_image.height,
              width: icon_image.width,
              loading: 'lazy',
              alt: icon_image.alt
            | escape
          }}
        {% endunless %}
        {% if block.settings.text != blank %}
          <span class="h5 mb-0 cta-text">{{ block.settings.text }}</span>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact form",
  "class": "contact-form-section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
        {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#e8e8e8"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Body font",
      "default": "#1b1b1b"
    }
  ],
    "blocks": [
    {
      "type": "image",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "32 x 32px .png recommended"
        },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body text",
      "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
    }
      ]
    }
  ],
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
    .cta-icons {
    background: {{ section.settings.background_color }};
  }
  .cta-wrapper {
    background: {{ section.settings.background_color }};
    min-height: 80px;
    padding: 0;
    display: flex;
    align-items: start;
    justify-content: center;
    line-height: var(--line-height);
    flex-wrap: wrap;
    gap: 0 60px;
  }
  .cta-wrapper .cta-item {
    flex: 1;
    display: flex;
    justify-content: left;
    padding: 10px 0;
    position: relative;
    align-items: start;
    align-content: space-between;
  }
  @media screen and (min-width: 768px) {
    .cta-wrapper .cta-item:not(:last-of-type) {
       min-height: 80px;
    }
  }
  .cta-wrapper .cta-item img {
    margin-right: 10px;
    width: 25px;
    max-width: 25px;
  }
  .cta-wrapper .cta-item .cta-text {
    font-size: var(--font-size-base);
    color: {{ section.settings.font_color }};
    white-space: nowrap;
    letter-spacing: var(--letter-spacing);
    font-weight: var(--font-weight-body);
  }
  @media screen and (max-width: 768px) {
    .cta-wrapper .cta-item {
    }
    .cta-wrapper {
      padding: 15 0px;
      display: block;
      align-items: start;
      justify-content: center;
    }
    .cta-wrapper .cta-item:not(:last-of-type) {
       border-right: none;
    }
    div.cta-item {
      border-right: none;
    }
    div.cta-item:nth-child(2) {
      border-right: none;
    }
    .cta-wrapper .cta-item .cta-text {
      white-space: normal;
      font-size: var(--font-size-base);
      letter-spacing: var(--letter-spacing);
    }
    .cta-wrapper .cta-item img {
      margin-right: 10px;
      width: 20px;
      max-width: 20px;
    }
  }
  @media screen and (max-width: 598px){
    .cta-wrapper .cta-item {
      border-right: none !important;
      font-size: var(--font-size-base);
    }
  }
{% endstyle %}
