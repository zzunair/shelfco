{% comment %}
  Main brands section
{% endcomment %}

{%- liquid
  assign section_header = section.settings.section_header
  assign _switchLayout = 'col-lg-3 col-md-4'
-%}

<section
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  data-section-id="{{ section.id }}"
>
  <div class="brand-section row wow fadeIn">
    <div class="col-md-12 px-0">
      <!-- Header -->
      {% if section_header != blank %}
        <div class="container px-0 featured-multi-column-title">
          <h2 class="mb-3 text-center">{{ section_header }}</h2>
        </div>
      {% endif %}
      <!-- /Header -->
      <div class="container-fluid">
        <div class="brand-section-wrp">
          <div class="brand-slider-wrapper">
            {% capture marquee %}
              <div class="brand-slides">
                {% for block in section.blocks %}
                  {% assign section_img = block.settings.image %}
                  {% assign section_title = block.settings.section_title %}

                    {% if section_title == blank %}
                      {% assign flexDirection = 'unset' %}
                      {% assign gap = '0' %}
                    {% else %}
                      {% assign flexDirection = 'column' %}
                      {% assign gap = '2rem' %}
                    {% endif %}

                  {% if section_img != blank or section_title != blank or section_caption != blank %}
                  <div
                    class="brand-slide block-{{ block.id }} rounded__all"
                    data-wow-delay="300ms"
                    tabindex="0"
                  >
                   <div class="brand-column text-center">
                     {% if section_img != blank %}
                      <div class="brand-media mb-0">
                        <div class="image-wrapper">
                          {% if section_img == blank %}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg border rounded__all' }}
                          {% else %}
                            {% render 'responsive-image' with image: section_img, image_class: "d-block w-100 img-fluid rounded__all", wrapper_class: "img-wrapper-class", lazy: "lazy", max_width: 300, max_height: 300, media_size: "adapt" %}
                          {% endif %}
                        </div>
                      </div>
                    {% endif %}
                    <div class="card border-0">
                      <div class="card-body rounded-0 card-panel-bg p-0 mb-0">
                        <h3 class="brand-heading pb-0 mb-0 mt-1">
                          {{- section_title -}}
                        </h3>
                      </div>
                    </div>
                   </div>
                  </div>
                  {% endif %}
                {% endfor %}
               </div>
              {% endcapture %}
            {{ marquee }}
            {{ marquee }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "As seen on",
  "class": "main-brands",
  "max_blocks": 5,
  "settings": [
    {
      "type": "range",
      "id": "marquee_duration",
      "min": 5,
      "max": 20,
      "step": 1,
      "label": "Animation speed",
      "unit": "sec",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
    {
      "type": "text",
      "id": "section_header",
      "label": "Heading",
      "default": "As seen on"
    }
  ],
  "blocks": [
    {
      "type": "custom_html",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "section_title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "color",
          "id": "font_color",
          "label": "Text color",
          "default": "#212529"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color",
          "default": "#e8e8e8"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "As seen on",
      "category": "Content",
      "settings": {
      },
      "blocks": [
        {
         "type": "custom_html",
         "settings": {
            "image": "",
            "section_title": "Heading"
          }
        },
        {
         "type": "custom_html",
         "settings": {
            "image": "",
            "section_title": "Heading"
          }
        },
        {
         "type": "custom_html",
         "settings": {
            "image": "",
            "section_title": "Heading"
          }
        },
        {
         "type": "custom_html",
         "settings": {
            "image": "",
            "section_title": "Heading"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% for block in section.blocks %}
  {% assign font_color = block.settings.font_color %}
  {% assign bg_color = block.settings.bg_color %}
  {% style %}
    #{{ section.id }} .block-{{block.id}} .brand-heading,
    #{{ section.id }} .block-{{block.id}} p {
      color: {{ font_color }};
    }
    #{{ section.id }} .block-{{block.id}} {
      background: {{bg_color}};
    }
  {% endstyle %}
{% endfor %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  {% if section_img != blank %}
  .brand-media {
      margin: 0 auto;
      margin-bottom: 20px !important;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
  }
  {% endif %}

  .brand-column {
      padding: 35px;
      height: 100%;
      display: flex;
      flex-direction: {{ flexDirection }};
      align-items: center;
      gap: {{ gap }};
      justify-content: space-between;
  }
  .brand-column .aspect-ratio__unset {
      aspect-ratio: 1;
      max-width: 300px;
  }
  .brand-column img {
      object-fit: contain;
  }
  .brand-column p {
      margin-bottom: 6px;
  }
  .brand-slides {
      min-width: 100%;
      grid-column-gap: 20px;
      flex: none;
      justify-content: space-around;
      display: flex;
      animation: brandScrollRL {{ section.settings.marquee_duration }}s linear infinite;
  }
  .brand-slide {
      position: relative;
      width: -webkit-fill-available;
      background: var(--color-body-text-link);
  }
  .brand-slider-wrapper {
      width: 100%;
      grid-column-gap: 20px;
      display: flex;
      overflow: hidden;
  }
  @keyframes brandScrollRL {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 1rem));
    }
  }
{% endstyle %}
