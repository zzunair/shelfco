{{ 'section-pdp-comparison.css' | asset_url | stylesheet_tag }}

<div class="pdp-comparison">
  <div class="pdp-comparison__container page-width">
    {%- if section.settings.image != blank -%}
   
      <div class="pdp-comparison__image">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
      </div>
    {%- else -%}
    <h2 class="pdp-comparison__heading">{{ section.settings.heading }}</h2>
    <div class="pdp-comparison__table">
      <div class="pdp-comparison__feature-column">
        <div class="pdp-comparison__header">Feature</div>
        {% for feature in section.blocks %}
          <div class="pdp-comparison__feature-row">{{ feature.settings.feature_name }}</div>
        {% endfor %}
      </div>
      
      <div class="pdp-comparison__product-column product-column--highlighted">
        <div class="pdp-comparison__header">
          {{ section.settings.column1_heading }}
          <div class="pdp-comparison__stars">★★★★★</div>
        </div>
        {% for feature in section.blocks %}
          <div class="pdp-comparison__feature-row">{{ feature.settings.column1_text }}</div>
        {% endfor %}
      </div>
      
      <div class="pdp-comparison__product-column">
        <div class="pdp-comparison__header">{{ section.settings.column2_heading }}</div>
        {% for feature in section.blocks %}
          <div class="pdp-comparison__feature-row">{{ feature.settings.column2_text }}</div>
        {% endfor %}
      </div>
    </div>
  {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Comparison",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Milano VS Standard Wardrobes:"
    },
    {
      "type": "text",
      "id": "column1_heading",
      "label": "First Column Heading",
      "default": "Milano"
    },
    {
      "type": "text",
      "id": "column2_heading",
      "label": "Second Column Heading",
      "default": "Standard"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Comparison",
      "settings": [
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature Name",
          "default": "Feature"
        },
        {
          "type": "text",
          "id": "column1_text",
          "label": "Milano Feature",
          "default": "Milano feature description"
        },
        {
          "type": "text",
          "id": "column2_text",
          "label": "Standard Feature",
          "default": "Standard feature description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Comparison",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "feature_name": "Mounting",
            "column1_text": "Wall-mounted built-in luxe look",
            "column2_text": "Freestanding and unstable"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_name": "Thickness",
            "column1_text": "37% thicker (22mm) premium Italian board",
            "column2_text": "16mm thick board"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_name": "Edge Finishing",
            "column1_text": "Seamless postform surfacing",
            "column2_text": "Visible seamed edge banding"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_name": "Customization",
            "column1_text": "Full internal customization",
            "column2_text": "Limited or no customization"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_name": "Assembly",
            "column1_text": "Easiest assembly in the industry",
            "column2_text": "Complex assembly"
          }
        }
      ]
    }
  ]
}
{% endschema %}