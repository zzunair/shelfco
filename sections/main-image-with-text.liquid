{% comment %}
  Image with text section
{% endcomment %}

{%- liquid
  if section.settings.switchLayout == '1'
    assign _switchLayout = 'switch-layout-left'
  elsif section.settings.switchLayout == '2'
    assign _switchLayout = 'switch-layout-right'
  endif
-%}

<section
  id="{{ section.id }}"
  class="container-fluid wow fadeIn hero-header hero-container section-{{ section.id }}-padding"
  data-wow-delay="300ms"
>
  <div class="container">
    {% for block in section.blocks %}
      <div class="row hero-v4">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 {{ _switchLayout }} hero-wrapper home mobile-ready-padding px-0">
          <div class="split-content hero-content-left">
            {% if block.settings.content_title != blank %}
              <h2 class="title hero-title mb-0">
                {{ block.settings.content_title | escape }}
              </h2>
            {% endif %}
            {% if block.settings.content_caption != blank %}
              <p class="paragraph hero-paragraph rte">
                {{ block.settings.content_caption }}
              </p>
            {% endif %}
            {% unless block.settings.content_url == blank %}
              <div class="buttons-wrapper">
                <a
                  href="{{ block.settings.content_url }}"
                  class="btn btn-contact"
                  aria-label="{{ block.settings.content_button }}"
                  tabindex="0"
                >
                  {{ block.settings.content_button }}
                </a>
              </div>
            {% endunless %}
          </div>
          <div class="grid-item-wrapper">
            <div class="image-wrapper">
              {% if block.settings.image == blank %}
                {{ 'product-3' | placeholder_svg_tag: 'placeholder-svg border rounded__all' }}
              {% else %}
                {{
                  block.settings.image
                  | image_url: width: 2048
                  | image_tag:
                    class: 'image hero-v1 rounded__all border img-fluid',
                    widths: '500, 800, 1000, 1200, 1500',
                    height: block.settings.image.height,
                    width: block.settings.image.width,
                    loading: 'lazy',
                    alt: block.settings.image.alt
                  | escape
                }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "class": "main-image-with-text",
  "max_blocks": 1,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
    {
      "type": "select",
      "id": "switchLayout",
      "label": "Text alignment",
      "options": [
        {
          "value": "1",
          "label": "Right"
        },
        {
          "value": "2",
          "label": "Left"
        }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image with text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload image"
        },
        {
          "type": "text",
          "id": "content_title",
          "label": "Heading",
          "default": "Image with text"
        },
        {
          "type": "textarea",
          "id": "content_caption",
          "label": "Body text",
          "default": "Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
        },
        {
          "type": "text",
          "id": "content_button",
          "label": "Button label",
          "default": "Button label"
        },
        {
          "type": "url",
          "id": "content_url",
          "label": "Link",
  	      "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "Content",
      "settings": {
      },
      "blocks": [
        {
         "type": "image",
         "settings": {
            "image": "",
            "content_title": "Image with text",
            "content_caption": "Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
