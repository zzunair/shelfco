{% comment %}
  Icons section
{% endcomment %}

{%- liquid
  assign _colClassLayout = 'container'
-%}

<div
  id="{{ section.id }}"
  class="{{ _colClassLayout }} wow fadeIn section-{{ section.id }}-padding"
  data-wow-delay="300ms"
  tabindex="0"
>
  <div class="cta-wrapper">
    {% for block in section.blocks %}
      {% assign icon_image = block.settings.image | default: block.settings.image %}
      <div class="cta-item">
        {% unless icon_image == blank %}
          {{
            icon_image
            | image_url: width: 800
            | image_tag:
              class: 'img-fluid',
              widths: '50, 100, 150, 200, 250',
              height: sicon_image.height,
              width: icon_image.width,
              loading: 'lazy',
              alt: icon_image.alt
            | escape
          }}
        {% endunless %}
        {% if block.settings.icon_caption != blank %}
          <span class="h5 mb-0 cta-text">{{ block.settings.icon_caption | escape }}</span>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Icons",
  "class": "cta-icons",
  "max_blocks": 4,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#e8e8e8"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Body font",
      "default": "#1b1b1b"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "32 x 32px .png recommended"
        },
        {
          "type": "text",
          "id": "icon_caption",
          "label": "Heading",
          "default": "Add text here"
        }
      ]
    }
  ],
  "presets": [
    {
     "name": "Icons",
      "category": "Content",
      "settings": {},
      "blocks": [
          {
           "type": "image",
            "settings": {
              "image": "",
              "icon_caption": "Add text here"
            }
          },
          {
           "type": "image",
            "settings": {
              "image": "",
              "icon_caption": "Add text here"
            }
          },
          {
           "type": "image",
            "settings": {
              "image": "",
              "icon_caption": "Add text here"
            }
          }
        ]
      }
    ]
  }
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .cta-icons {
    background: {{ section.settings.background_color }};
  }
  .cta-wrapper {
    background: {{ section.settings.background_color }};
    min-height: 80px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: var(--line-height);
    flex-wrap: wrap;
    gap: 0 40px;
  }
  .cta-wrapper .cta-item {
    flex: 1;
    display: flex;
    justify-content: center;
    padding: 12px 0;
    position: relative;
    align-items: center;
    align-content: space-between;
  }
  @media screen and (min-width: 768px) {
    .cta-wrapper .cta-item:not(:last-of-type) {
       min-height: 80px;
    }
  }
  .cta-wrapper .cta-item img {
    margin-right: 10px;
    width: 25px;
    max-width: 25px;
  }
  .cta-wrapper .cta-item .cta-text {
    font-size: var(--font-size-base);
    color: {{ section.settings.font_color }};
    white-space: nowrap;
    letter-spacing: var(--letter-spacing);
    font-weight: var(--font-weight-body);
  }
  @media screen and (max-width: 768px) {
    .cta-wrapper .cta-item {
    }
    .cta-wrapper {
      padding: 15 0px;
      display: block;
      align-items: center;
      justify-content: center;
    }
    .cta-wrapper .cta-item:not(:last-of-type) {
       border-right: none;
    }
    div.cta-item {
      border-right: none;
    }
    div.cta-item:nth-child(2) {
      border-right: none;
    }
    .cta-wrapper .cta-item .cta-text {
      white-space: normal;
      font-size: var(--font-size-base);
      letter-spacing: var(--letter-spacing);
    }
    .cta-wrapper .cta-item img {
      margin-right: 10px;
      width: 20px;
      max-width: 20px;
    }
  }
  @media screen and (max-width: 598px){
    .cta-wrapper .cta-item {
      border-right: none !important;
      font-size: var(--font-size-base);
    }
  }
{% endstyle %}
